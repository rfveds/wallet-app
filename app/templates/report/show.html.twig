{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.report_details'|trans({'%id%': report.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ report.title }}</h1>
    {% if report is defined and report|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ report.id }}</dd>
            <dt>{{ 'label.date_from'|trans }}</dt>
            <dd>{{ report.dateFrom|date('Y/m/d') }}</dd>
            <dt>{{ 'label.date_to'|trans }}</dt>
            <dd>{{ report.dateTo|date('Y/m/d') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  report.title }}</dd>
            {% if report.wallet %}
            <dt>{{ 'label.wallet'|trans }}</dt>
            <dd>{{ report.wallet.title }}</dd>
            {% endif %}
            {% if report.tag %}
                <dt>{{ 'label.tag'|trans }}</dt>
                <dd>{{ report.tag.title }}</dd>
            {% endif %}
            {% if report.category %}
                <dt>{{ 'label.category'|trans }}</dt>
                <dd>{{ report.category.title }}</dd>
            {% endif %}
        </dl>
        <p>
            <a href="{{ url('report_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
            {% if is_granted('EDIT', report) %}
            <a href="{{ url('report_edit', {'id': report.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
            {% endif %}
            {% if is_granted('DELETE', report) %}
            <a href="{{ url('report_delete', {'id': report.id}) }}" title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}
            </a>
            {% endif %}
        </p>

        {% if pagination is defined and pagination.items|length %}

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'operation.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'operation.createdAt') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'operation.updatedAt') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'operation.title') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.amount'|trans, 'operation.amount') }}</th>
                    <th>{{ 'label.category'|trans }}</th>
                    <th>{{ 'label.tags'|trans }}</th>
                    <th>{{ 'label.wallet'|trans }}</th>
                    <th>{{ 'label.author'|trans }}</th>
                    <th>{{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for operation in pagination.items %}
                    <tr>
                        <td>{{ operation.id }}</td>
                        <td>{{ operation.createdAt|format_date('long') }}</td>
                        <td>{{ operation.updatedAt|date('Y/m/d') }}</td>
                        <td>{{ operation.title }}</td>
                        <td>{{ operation.amount }}</td>
                        <td>
                                {{ operation.category.title }}
                        </td>
                        <td>
                            {% if operation.tags is defined and operation.tags|length %}
                                {% for tag in operation.tags %}
                                        {{ tag.title }}
                                {% endfor %}
                            {% else %}
                                &nbsp;
                            {% endif %}
                        </td>
                        <td>{{ operation.wallet.title }}</td>
                        <td>{{ operation.author.email }}</td>
                        <td>
                            {% if is_granted('VIEW', operation ) %}
                                <a href="{{ url('operation_show', {id: operation.id}) }}" title="{{ 'action.show'|trans }}">
                                    {{ 'action.show'|trans }}
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}

            <p>
                {{ 'message.empty_list'|trans }}
            </p>

        {% endif %}


    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}