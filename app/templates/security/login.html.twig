{% extends 'base.html.twig' %}

{% block title %}{{ 'action.login'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-lg-4 col-md-6 col-sm-8">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            {{ 'text.logged_as'|trans }} {{ app.user.userIdentifier }}, <a
                                    href="{{ path('app_logout') }}">{{ 'action.logout'|trans }}</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal text-center">{{ 'title.login'|trans }}</h1>

                    <div class="mb-3">
                        <label class="form-label" for="inputEmail">{{ 'label.email'|trans }}</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"
                               for="inputPassword">{{ 'label.password'|trans }}
                        </label>
                        <input type="password" name="password" id="inputPassword"
                               class="form-control"
                               autocomplete="current-password" required
                        >
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid">
                        <button class="btn btn-outline-success" type="submit">
                            {{ 'action.login'|trans }}
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
